{
  "name": "md2doc",
  "version": "0.3.0",
  "description": "Markdown 多格式轉換工具 - 將 Markdown 轉換為 Word、PDF 等格式",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "md2doc": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "markdown",
    "word",
    "pdf",
    "docx",
    "converter",
    "mermaid"
  ],
  "author": "md2doc contributors",
  "license": "MIT",
  "dependencies": {
    "marked": "^11.0.0",
    "docx": "^8.5.0",
    "puppeteer": "^21.0.0",
    "mermaid": "^10.6.0",
    "sharp": "^0.33.0",
    "commander": "^11.1.0",
    "yaml": "^2.3.4",
    "inquirer": "^9.2.12",
    "cli-progress": "^3.12.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/marked": "^6.0.0",
    "@types/inquirer": "^9.0.7",
    "@types/cli-progress": "^3.11.5",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.10",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
